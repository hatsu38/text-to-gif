{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": "./",
    "declaration": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "target": "es6",
    "module": "es2020",
    "jsx": "react",
    "strict": true,
    "typeRoots": ["node_modules/@types", "./src/types"],
    "paths": {
      "~/*": ["src/*"]
    },
  },
  "exclude": ["node_modules", "tmp"]
}